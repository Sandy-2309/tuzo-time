        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="El siguiente T05-Parador llegará en:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtT05"
            android:layout_width="match_parent"
